<script>
const messages = [
    "You are my peace in this chaotic world.",
    "Loving you is the best decision I ever made.",
    "Your smile is my favorite place.",
    "Every day with you is a blessing.",
    "You are not just my love, you are my home."
];

function changeMessage() {
    const random = Math.floor(Math.random() * messages.length);
    document.getElementById("message").innerText = messages[random];
}
</script>

